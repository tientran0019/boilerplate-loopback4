{
	"extends": [
		"@loopback/eslint-config"
	],
	"rules": {
		"quotes": [
			"error",
			"single",
			{
				"allowTemplateLiterals": true
			}
		],
		"max-len": "off",
		"comma-dangle": [
			"error",
			"always-multiline"
		],
		"indent": [
			2,
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"array-bracket-spacing": [
			"error",
			"always"
		],
		"object-curly-spacing": [
			"error",
			"always"
		],
		"no-unused-vars": [
			"error",
			{
				"vars": "all",
				"args": "none",
				"ignoreRestSiblings": true
			}
		],
		"semi": ["error", "always"],
		"no-empty": "warn",
        "no-cond-assign": ["error", "always"]
	},
	"globals": {
		"fetch": true,
		"__DEV__": true,
		"FormData": true
	}
}
